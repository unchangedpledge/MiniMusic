
.mini-music {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.mini-music .header {
	width: 100%;
	height: 80px;
	font-size: 19px;
}
.mini-music .app-Head {
	margin-top: 40rpx;
	width: 100%;
	height: 64rpx;
	text-align: center;
	/* color: #fff; */
}
.mini-music .app-Head .app-name {
	display: inline-block;
	font-size: 19px;
	margin-top: 8rpx;
}
.mini-music .app-Head .person{
	position: absolute;
	left: 20rpx;
	margin-top: 8rpx;
}
.mini-music .content {
	position: fixed;
	width: 100%;
	top: 180rpx;
	bottom: 0;
	background-color: #fff;
}

