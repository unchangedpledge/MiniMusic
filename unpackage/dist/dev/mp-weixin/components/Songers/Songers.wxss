
.singer-content {
	width: 100%;
	height: 100%;
}
.singer-scroll {
	height: 100%;
	display: flex;
	flex-direction: column;
}
.singer-top {
	padding: 16rpx 20rpx;
}
.singer-top view ._ul ._li {
	display: inline-block;
	padding: 10rpx 30rpx;
	font-size: 30rpx;
	color: #424242;
}
.singer-top view ._ul ._li.active {
	color: #333;
	font-weight: bold;
}
.singer-scroll text.title {
	display: block;
	background: rgba(51,51,51,.1);
	color: #8b8b8b;
	padding-left: 18rpx;
	font-size: 24rpx;
	height: 40rpx;
	line-height: 40rpx;
}


