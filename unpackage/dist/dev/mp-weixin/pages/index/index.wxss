
.mini-music {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.mini-music .header {
	width: 100%;
	font-size: 19px;
}
.mini-music .app-Head {
	width: 100%;
	height: 80rpx;
	
	text-align: center;
}
.mini-music .app-Head .app-name {
	display: inline-block;
	font-size: 19px;
	margin-top: 8rpx;
}
.mini-music .app-Head .person{
	position: absolute;
	right: 20rpx;
	margin-top: 8rpx;
}
.logo {
	height: 200rpx;
	width: 200rpx;
	margin-top: 200rpx;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 50rpx;
}
.text-area {
	display: flex;
	justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}

