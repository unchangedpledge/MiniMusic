
.mini-music {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.mini-music .header {
	width: 100%;
	height: 180rpx;
	font-size: 19px;
}
.mini-music .app-Head {
	margin-top: 40rpx;
	width: 100%;
	height: 64rpx;
	text-align: center;
	color: #fff;
}
.mini-music .app-Head .app-name {
	display: inline-block;
	font-size: 19px;
	margin-top: 8rpx;
}
.mini-music .app-Head .person{
	position: absolute;
	left: 20rpx;
	margin-top: 8rpx;
}
.content {
	position: fixed;
	width: 100%;
	top: 180rpx;
	bottom: 0;
	background-color: #fff;
}
.user-center {
	-webkit-animation: come .3s;
	        animation: come .3s;
}
.change-skin {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 1000;
}
.user-center.out {
	-webkit-animation: out .3s;
	        animation: out .3s;
}
@-webkit-keyframes come {
0% {
		top: 100%;
}
100% {
		top: 40rpx;
}
}
@keyframes come {
0% {
		top: 100%;
}
100% {
		top: 40rpx;
}
}
@-webkit-keyframes out {
0% {
		top: 40rpx;
}
100% {
		top: 100%;
}
}
@keyframes out {
0% {
		top: 40rpx;
}
100% {
		top: 100%;
}
}
.drawer {
	height: 100%;
	padding: 30rpx;
}
.drawer .img {
	margin-bottom: 20rpx;
}



